Add/change an event!

<div class = "row">
	<div class = "col-xs-6 col-xs-offset-3">
		<form style = "margin-top: 20px" method="POST">
			<div class="form-group">
			     <input type="text" class="form-control" placeholder="Event Title:" value = "{{event.title}}" name = "title" required>
			</div>
      <div class="form-group">
			     <input type="text" class="form-control" placeholder="Latitude" value = "{{event.latitude}}" name = "latitude" required>
			</div>
      <div class="form-group">
			     <input type="text" class="form-control" placeholder="Longitude" value = "{{event.longitude}}" name = "longitude" required>
			</div>
      <div class="form-group">
			     <input type="text" class="form-control" placeholder="Radius" value = "{{event.radius}}" name = "radius" required>
			</div>
			<div class="form-group">
				<input type="datetime-local" class="form-control" name="date" value = "{{event.date}}" required>
			</div>
      <textarea class="form-control" id="notes" name="notes">{{event.notes}}</textarea>
			<button type="submit" class="btn btn-primary">Submit</button>
			<a href="/admin" class="btn btn-primary">Back</a>
		</form>
	</div>
</div>
